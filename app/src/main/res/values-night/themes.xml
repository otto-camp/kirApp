<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KirApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_100</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_900</item>
        <item name="colorSecondaryVariant">@color/black_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black_400</item>
        <item name="floatingActionButtonStyle">@style/Fab.Style</item>
    </style>

    <style name="Fab.Style" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/Fab.Shape.Style</item>
        <item name="android:backgroundTint">@color/blue_700</item>
        <item name="rippleColor">@color/blue_700</item>
    </style>

    <style name="Fab.Shape.Style" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TonalButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textColor">@color/blue_200</item>
        <item name="backgroundTint">@color/transparent_white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SubmitButton">
        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ElevatedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="ElevatedButtonRed" parent="Widget.Material3.Button.ElevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/red_100</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextButtonBack" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red_100</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/blue_300</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>